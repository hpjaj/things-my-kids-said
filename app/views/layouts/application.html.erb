<!DOCTYPE html>
<html>
<head>
  <title>ThingsMyKidsSaid</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
    <% if current_user %>
     Hello <%= current_user.email %>! <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path %> or
      <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
  </div>

  <div>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% elsif flash[:error] %>
      <%= flash[:error] %>
    <% end %>
  </div>

  <div>
    <% if kids = my_kids(current_user) %>
      <% kids.each do |kid| %>
        <%= link_to kid.name, kid_posts_path(kid.id) %>
      <% end %>
    <% end %>

    <%= link_to 'New Quote', new_post_path %>
    <%= link_to 'New Kid', new_kid_path %>
    <%= link_to 'Edit Kids', kids_path %>
  </div>

<%= yield %>

</body>
</html>
