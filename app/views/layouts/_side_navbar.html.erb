<div class="card">
  <h3 class="card-header side-nav-title"><%= link_to 'Kids', home_path, class: 'side-nav-header-link' %></h3>
  <div class="card-block">
    <% if kids = your_kids %>
      <h5 class="card-title side-nav-sub-titles">Yours</h5>
      <ul class="side-nav-kids">
        <% kids.each do |kid| %>
          <%= content_tag(:li, link_to(kid.first_name.titleize, kid_posts_path(kid.id), class: 'text-muted'), class: 'side-nav-kids' ) %>
        <% end %>
      </ul>
    <% end %>

    <% if kids = your_friends_and_family %>
      <h5 class="card-title side-nav-sub-titles">Friends & Family</h5>
      <ul class="side-nav-kids">
        <% kids.each do |kid| %>
          <%= content_tag(:li, link_to(kid.full_name, kid_posts_path(kid.id), class: 'text-muted'), class: 'side-nav-kids' ) %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

