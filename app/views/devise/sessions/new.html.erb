<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 card card-block registration-form">
  <div class="row">
    <div class="comment-header">
      <div class="comment-count-container">
        <p class='comment-count-area'>Log in</p>
      </div>
      <div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false, autocomplete: "off" %>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="devise-buttons">
            <%= f.submit 'Log in', class: 'btn btn-info solid-button' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
