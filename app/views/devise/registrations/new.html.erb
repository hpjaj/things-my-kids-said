<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 card card-block registration-form">
  <div class="row">
    <div class="comment-header">
      <div class="comment-count-container">
        <p class='comment-count-area'>Sign up</p>
      </div>
      <div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :first_name, autofocus: true, required: false %>
          <%= f.input :last_name, required: false %>
          <%= f.input :email, required: false %>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
          </div>

          <%= f.input :password_confirmation, required: false, autocomplete: "off" %>

          <%= f.input :photo, as: :file, required: false, label: 'Profile Photo (optional)' %>

          <%= f.submit 'Sign up', class: 'btn btn-info btn-info-outline devise-buttons' %>
        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
