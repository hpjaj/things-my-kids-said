<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 card card-block registration-form">
  <div class="row">
    <div class="comment-header">
      <div class="comment-count-container">
        <p class='comment-count-area'>Forgot your password?</p>
      </div>
      <div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :email, autofocus: true, required: false %>

          <%= f.submit "Send me reset password instructions", class: 'btn btn-info solid-button devise-buttons' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
