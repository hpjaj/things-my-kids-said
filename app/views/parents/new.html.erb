<h5 class="page-title form-title">Add Parent</h5>

<div class="forms">
  <%= simple_form_for :parents, url: parents_path do |f| %>
    <%= f.input :kid_id, collection: current_user.kids.order(:first_name), label_method: :full_name, value_method: :id, required: false, input_html: { class: 'form-control' } %>

    <%= f.input :parent_id, label: "Kid's Parent", collection: User.potential_spouse_of(current_user), label_method: :full_name, value_method: :id, required: false, input_html: { class: 'form-control parent_select' } %>

    <%= link_to 'Cancel', :back, class: 'btn btn-secondary btn-secondary-outline devise-buttons' %>
    <%= f.submit 'Save', class: 'pull-right btn btn-info btn-info-outline devise-buttons' %>

    <%= render 'parents/invite_parent' %>
  <% end %>
</div>


<script>
  $('.parent_select').select2({
    theme: "bootstrap",
    placeholder: "Enter name",
    allowClear: true
  });
</script>
