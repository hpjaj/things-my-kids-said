<div class="forms">
  <%= simple_form_for @kid do |f| %>
    <%= f.input :first_name, required: false %>
    <%= f.input :last_name, required: false %>
    <%= f.input :birthdate, as: :date, html5: true, required: false %>
    <%= f.input :gender, collection: [['Boy', Kid::BOY], ['Girl', Kid::GIRL]], required: false %>
    <%= image_tag @kid.photo.expiring_url(3600, :thumb) if @kid.photo? %>
    <%= f.input :photo, as: :file, required: false, label: 'Add/Change Photo' %>
    <br/>

    <%= link_to 'Cancel', :back, class: 'btn btn-secondary btn-secondary-outline devise-buttons' %>
    <%= f.submit 'Save', class: 'pull-right btn btn-info btn-info-outline devise-buttons' %>
  <% end %>
</div>

