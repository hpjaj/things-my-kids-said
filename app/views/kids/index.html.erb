<div class="col-lg-2 col-sm-3 hidden-sm-down">
  <%= render 'layouts/side_nav/navbar' %>
</div>

<div class="col-lg-8 col-sm-9">
  <h5 class="page-title">Your Kids</h5>

  <div class="table-responsive">
    <table class="table">
      <thead class="family-table">
        <tr>
          <th>Photo</th>
          <th>Kid</th>
          <th>Gender</th>
          <th>Birthdate</th>
          <th>Edit</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody class="family-table kids-table">
        <% @kids.each do |kid| %>
          <tr>
            <td><%= image_tag kid.photo.expiring_url(3600, :thumb), class: 'timeline-photo' if kid.photo? %></td>
            <td><%= kid.full_name.titleize %></td>
            <td><%= kid.gender.titleize %></td>
            <td><%= kid.birthdate.strftime("%-m/%d/%y") %></td>
            <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
            <td><%= link_to('Delete', kid_path(kid), method: :delete, data: { confirm: 'Delete this kid?' }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class='family-index-button'>
    <%= link_to "Add New Kid", new_kid_path, class: 'btn btn-sm btn-info btn-info-outline devise-buttons' %>
  </div>
</div>
