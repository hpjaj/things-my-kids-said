<div class="col-lg-2 col-sm-3 hidden-sm-down">
  <%= render 'layouts/side_nav/navbar' %>
</div>

<div class="col-lg-8 col-sm-9">
  <h5 class="page-title">Your Kids</h5>
  <% @kids.each do |kid| %>
    <p>
      <%= image_tag kid.photo.expiring_url(3600, :thumb), class: 'kids-edit-photo' if kid.photo? %>
      <%= kid.full_name.titleize %>,
      <%= kid.gender %>,
      <%= kid.birthdate.strftime("%-m/%d/%y") %>,
      <%= link_to 'Edit', edit_kid_path(kid) %>
    </p>
  <% end %>

  <% if !@kids.present? %>
    <p><%= link_to "Enter your kid's information", new_kid_path %></p>
  <% end %>
</div>

<div class="col-lg-2 col-sm-1"></div>
