<div class="col-lg-2 col-sm-3 hidden-sm-down">
  <%= render 'layouts/side_nav/navbar' %>
</div>

<div class="col-lg-8 col-sm-9 timeline-container">
  <h5 class="page-title">Your Kids</h5>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="family-table">
        <tr>
          <th>Photo</th>
          <th>Kid</th>
          <th>Gender</th>
          <th>Birthdate</th>
          <th>Added By</th>
          <th>Edit</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody class="family-table kids-table">
        <% @kids.each do |kid| %>
          <tr>
            <td><%= image_tag kid.photo.expiring_url(3600, :thumb), class: 'timeline-photo' if kid.photo? %></td>
            <td><%= kid.full_name.titleize %></td>
            <td><%= kid.gender.titleize %></td>
            <td><%= kid.birthdate.strftime("%-m/%d/%y") %></td>
            <td><%= User.find_by(id: kid.created_by).full_name %></td>
            <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
            <td><%= link_to('Remove', kid_path(kid), method: :delete, data: { confirm: "Remove #{kid.full_name}?" }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class='family-index-button'>
    <%= link_to "Add Parent", new_parent_path, class: 'btn btn-info btn-info-outline devise-buttons kid-buttons solid-button' %>
    <%= link_to "Add Kid", new_kid_path, id: 'new-kid-button', class: 'btn btn-info btn-info-outline devise-buttons kid-buttons' %>
    <%= link_to "Export Quotes", my_kids_quotes_path, id: 'export-posts-button', class: 'btn btn-info btn-info-outline devise-buttons kid-buttons', data: { confirm: 'Quotes can be exported to a computer. On a mobile device, they are only viewable.' } %>
  </div>
</div>
