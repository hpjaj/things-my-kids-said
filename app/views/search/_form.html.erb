<div>
  <%= form_tag @path, method: :get do %>
    <div class="input-group input-group-lg">
      <%= text_field_tag :query, params[:query], placeholder: 'What did they say?', class: "form-control input-lg" %>
      <span class="input-group-btn">
        <button type="submit" class="btn search-button" id="search-submit-button">
          <span class="glyphicon glyphicon-search glyphicon-font-color"></span>
        </button>
      </span>
    </div>
  <% end %>
</div>
