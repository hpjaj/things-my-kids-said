<div class="col-lg-2 col-sm-3 hidden-sm-down">
  <%= render 'layouts/side_nav/navbar' %>
</div>

<div class="col-lg-8 col-sm-9 timeline-container">
  <h5 class="page-title">Kids Hidden In Timeline</h5>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="family-table">
        <tr>
          <th>Hidden Kid</th>
          <th>Show</th>
        </tr>
      </thead>
      <tbody class="family-table kids-table">
        <% @filtered_kids.each do |filtered_kid| %>
          <% kid = filtered_kid.kid %>

          <tr>
            <td><%= kid.full_name %></td>
            <td><%= link_to('Show', filtered_kid_path(filtered_kid), method: :delete, data: { confirm: "Begin showing #{kid.full_name}'s quotes in your timeline?" }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Back', settings_path, class: 'btn btn-info devise-buttons normal-button-margin solid-button' %>
</div>
